<?xml version="1.0" encoding="utf-8"?>
<resources>

        <style name="Widget.App.BottomNavigationView.Selected" parent="Widget.MaterialComponents.BottomNavigationView">
            <item name="backgroundColor">@color/default_bottom_nav</item>
            <item name="background">@color/default_bottom_nav</item>
            <item name="backgroundTint">@color/default_bottom_nav</item>
            <item name="itemIconTint">@color/selected_bottom_nav</item>
            <item name="itemTextColor">@color/selected_bottom_nav</item>
        </style>

        <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Filter">
            <item name="chipBackgroundColor">@color/chip_selector </item>
            <item name="android:textColor">@color/chip_text_style</item>
        </style>

        <style name="buttonStyle" parent="Widget.AppCompat.Button">
            <item name="android:background">@drawable/rounded_edittext</item>
            <item name="android:textColor">@color/bottom_sheet_text_for_buttons</item>
        </style>



    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/Red</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/Red</item>
    </style>



</resources>